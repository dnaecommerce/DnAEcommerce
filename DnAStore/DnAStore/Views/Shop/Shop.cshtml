@model IEnumerable<DnAStore.Models.Product>

@{
    ViewData["Title"] = "Shop";
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(product => product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(product => product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(product => product.Description)
            </th>
            <th>
                @Html.DisplayNameFor(product => product.Image)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Image)" title="@Html.DisplayFor(modelItem => item.Name)" width="200" />
                </td>
                <td>
                    <a asp-action="AddToCart" asp-route-id="@item.ID">Add to Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
